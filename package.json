{
  "name": "home-assistant-rxjs",
  "version": "0.0.1",
  "author": "Alexander Ciesielski <alexander@ciesielski.co>",
  "license": "MIT",
  "description": "rxjs wrapper for home-assistant-js-websocket",
  "keywords": [
    "rxjs",
    "home-assistant",
    "home",
    "automation",
    "typescript"
  ],
  "engines": {
    "node": ">=12"
  },
  "main": "dist/main/index.js",
  "typings": "dist/typings/index.d.ts",
  "module": "dist/module/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ciesielskico/home-assistant-rxjs"
  },
  "scripts": {
    "dev": "tsnd -r esm --respawn example/index.ts",
    "prebuild": "rimraf dist",
    "build": "npm run build:main && npm run build:module",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "prestart": "npm run build",
    "start": "node -r esm ./dist/main/index.js",
    "lint": "eslint lib/**",
    "lint:fix": "npm run lint -- --fix",
    "lint-staged": "lint-staged",
    "typecheck": "tsc --noEmit",
    "test": "mocha -r ts-node/register lib/**/*.spec.ts",
    "test:watch": "npm run test -- --extensions ts --watch --watch-files lib"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "home-assistant-js-websocket": "^5.1.0",
    "rxjs": "^6.5.4",
    "ws": "^7.2.3",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/command-line-args": "^5.0.0",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.0",
    "@types/ws": "^7.2.3",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.0",
    "rimraf": "^3.0.2",
    "rxjs-marbles": "^6.0.0",
    "ts-mocha": "^7.0.0",
    "ts-node": "^8.8.1",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "npm run lint -- --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
